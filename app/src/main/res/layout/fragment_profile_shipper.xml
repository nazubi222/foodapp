<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/maucam"
            android:padding="10dp">
        <ImageView
            android:id="@+id/imgshipper_back"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:padding="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shiper"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_shipperprocessing"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Đơn hàng đang xử lý"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text = "||"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_shipperhistory"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Lịch sử giao hàng"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_profileshipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>





    </LinearLayout>

</androidx.core.widget.NestedScrollView>