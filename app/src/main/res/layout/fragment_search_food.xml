<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#31111111">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/white"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_homesearchback"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:src="@drawable/baseline_arrow_back_ios_24" />

            <EditText
                android:id="@+id/edt_searchfood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập thông tin tìm kiếm"
                android:layout_toRightOf="@+id/img_homesearchback"
                android:inputType="text"/>
            <ImageView
                android:id="@+id/img_searchhomefood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_search_24"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_searchfood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>