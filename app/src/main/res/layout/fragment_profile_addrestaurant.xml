<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/maucam">
            <ImageView
                android:id="@+id/imgprofileaddrestaurant_back"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm nhà hàng"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên nhà hàng"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/tvprofile_restaurantname"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:hint="Tên nhà hàng"
            android:inputType="text" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/maucam"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"/>
        </LinearLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành phố"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/tvprofile_restaurantcity"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:hint="Thành phố"
            android:inputType="text" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quận"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/tvprofile_restaurantdistrick"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:hint="Quận/Huyện"
            android:inputType="text" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phường"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/tvprofile_restaurantward"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Phường/Xã"
            android:inputType="text" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khác"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/tvprofile_restaurantother"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Thông tin khác"
            android:inputType="text" />


        <Button
            android:id="@+id/btadd_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm nhà hàng"
            android:layout_gravity="center"
            android:backgroundTint="@color/maucam"/>

    </LinearLayout>
</ScrollView>