<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/maucam">
        <ImageView
            android:id="@+id/imgprofileinfo_back"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Họ và tên"
            android:textStyle="bold"
            android:padding="15dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tvprofileinfo_name"
            android:layout_width="wrap_content"
            android:textAlignment="viewEnd"
            android:hint="Họ và tên"
            android:padding = "15dp"
            android:textSize="16dp"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Số điện thoại"
            android:textStyle="bold"
            android:padding="15dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tvprofileinfo_phone"
            android:layout_width="wrap_content"
            android:textAlignment="viewEnd"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:padding = "15dp"
            android:textSize="16dp"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Email"
            android:textStyle="bold"
            android:padding="15dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tvprofileinfo_email"
            android:layout_width="wrap_content"
            android:textAlignment="viewEnd"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding = "15dp"
            android:textSize="16dp"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Giới tính"
            android:textStyle="bold"
            android:padding="15dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tvprofileinfo_sex"
            android:layout_width="wrap_content"
            android:hint="Giới tính"
            android:padding = "15dp"
            android:textSize="16dp"
            android:textAlignment="viewEnd"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Ngày sinh"
            android:textStyle="bold"
            android:padding="15dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tvprofileinfo_date"
            android:layout_width="wrap_content"
            android:textAlignment="viewEnd"
            android:hint="Ngày sinh"
            android:padding = "15dp"
            android:inputType="date"
            android:textSize="16dp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp">
        <Button
            android:id="@+id/btupdate_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text ="Cập nhật thông tin"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/maucam"/>
    </TableRow>



</TableLayout>